@model Releye_List.Models.KundLista

@{
    ViewData["Title"] = "Edit";
}



    <h4 class="bg-primary p-sm-1 rounded-lg text-white">Redigera</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
