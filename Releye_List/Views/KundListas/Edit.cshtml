            </div>
            <div class="form-group">
                <label>Land</label>
                <select asp-for="LandListaId" class="form-control" asp-items="ViewBag.LandListaId"></select>
                <span asp-validation-for="LandListaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
    <a class="btn btn-outline-primary" asp-action="Index">Tillbaka </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
